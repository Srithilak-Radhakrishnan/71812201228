{
    "info": {
        "name": "URL Shortener Microservice",
        "description": "Complete API collection for the URL shortener service. All endpoints use POST method for consistency.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://localhost:9999/health",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "9999",
                    "path": [
                        "health"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": ""
                },
                "description": "Check the health status of the service and database connection"
            },
            "response": []
        },
        {
            "name": "Shorten URL",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://localhost:9999/shorten",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "9999",
                    "path": [
                        "shorten"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"originalUrl\": \"https://www.google.com/search?q=nodejs+express+tutorial\"\n}"
                },
                "description": "Create a shortened URL from a long URL. The service will generate a unique short identifier."
            },
            "response": []
        },
        {
            "name": "Get URL Info",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://localhost:9999/url-info",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "9999",
                    "path": [
                        "url-info"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"shortUrl\": \"abc123\"\n}"
                },
                "description": "Retrieve information about a shortened URL including the original URL and access count."
            },
            "response": []
        },
        {
            "name": "Redirect URL",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://localhost:9999/redirect",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "9999",
                    "path": [
                        "redirect"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"shortUrl\": \"abc123\"\n}"
                },
                "description": "Get the redirect URL for a short URL. This increments the access count."
            },
            "response": []
        },
        {
            "name": "List All URLs",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://localhost:9999/urls",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "9999",
                    "path": [
                        "urls"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"limit\": 10,\n  \"page\": 1\n}"
                },
                "description": "Retrieve a paginated list of all shortened URLs in the system."
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:9999",
            "type": "string"
        }
    ]
}